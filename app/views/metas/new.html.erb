<%= stylesheet_link_tag 'metas', media: 'all' %>
<body class="metas">
<div class="form-container centralizar-metas"> 
  <%= form_with(model: @meta, url: metas_path, local: true) do |form| %>
    
    <h1 class="titulo-metas">Criar Meta</h1>

    <div class="field-group_metas">
      <div class="field_data">
        <%= form.label :data_inicio, "Data Início", class: "label-meta" %>
        <%= form.date_field :data_inicio, class: "input-meta" %>
      </div>

      <div class="field_data">
        <%= form.label :data_fim, "Data Fim", class: "label-meta" %>
        <%= form.date_field :data_fim, class: "input-meta" %>
      </div>
    </div>

    <div class="field">
      <%= form.label :descricao, "Descrição", class: "label-meta" %>
      <%= form.text_area :descricao, rows: 3, class: "input-meta" %>
    </div>

    <div class="field-group_metas">
      <div class="field_total">
        <%= form.label :status_id, "Status", class: "label-meta" %>
        <%= form.collection_select :status_id, Status.all, :id, :nome, { prompt: "Selecione um Status" }, { class: "input-meta" } %>
      </div>

      <div class="field_total">
        <%= form.label :categoria_id, "Categoria", class: "label-meta" %>
        <%= form.collection_select :categoria_id, Categoria.all, :id, :nome, { prompt: "Selecione uma Categoria" }, { class: "input-meta" } %>
      </div>
    </div>

    <div class="metas-actions">
      <%= form.submit "Criar Meta", class: "btn-meta" %>
    </div>
    
  <% end %>
</div>
</body>
